<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.typinggame.controller.LeaderboardsController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true">
         <image>
            <Image url="@images/GameModeBackground.png" />
         </image>
      </ImageView>
      <BorderPane blendMode="SRC_ATOP" prefHeight="720.0" prefWidth="1280.0">
      
          <top>
              <HBox spacing="10" style="-fx-padding: 10;">
                  <children>
                      <Label alignment="CENTER" prefHeight="24.0" prefWidth="72.0" text="Drill:" textFill="WHITE">
                     <font>
                        <Font name="Press Start 2P Regular" size="12.0" />
                     </font>
                  </Label>
                      <ComboBox fx:id="drillSelect" prefWidth="300" />
                      <Pane HBox.hgrow="ALWAYS" />
                  <StackPane prefHeight="25.0" prefWidth="81.0">
                     <children>
                        <ImageView fitHeight="25.0" fitWidth="81.0" layoutX="25.0" layoutY="209.0">
                           <image>
                              <Image url="@images/Button.png" />
                           </image>
                        </ImageView>
                        <Button fx:id="backButton" onAction="#handleBack" prefHeight="25.0" prefWidth="66.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Back">
                           <font>
                              <Font name="Press Start 2P Regular" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </StackPane>
                  </children>
              </HBox>
          </top>
      
          <center>
              <TableView fx:id="table" style="-fx-background-color: transparent;" stylesheets="@styles/tableViewStyle.css">
                  <columns>
                      <TableColumn fx:id="colName" prefWidth="200" text="User" />
                      <TableColumn fx:id="colWpm" prefWidth="120" text="WPM" />
                      <TableColumn fx:id="colAcc" prefWidth="140" text="Accuracy (%)" />
                      <TableColumn fx:id="colScore" prefWidth="160" text="Score (WPMÃ—Acc)" />
                  </columns>
              </TableView>
          </center>
      
      </BorderPane>
   </children>
</Pane>

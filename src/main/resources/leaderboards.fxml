<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.typinggame.controller.LeaderboardsController"
            prefHeight="720.0" prefWidth="1280.0">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <children>
                <Label text="Drill:"/>
                <ComboBox fx:id="drillSelect" prefWidth="300"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
            </children>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colName" text="User" prefWidth="200"/>
                <TableColumn fx:id="colWpm" text="WPM" prefWidth="120"/>
                <TableColumn fx:id="colAcc" text="Accuracy (%)" prefWidth="140"/>
                <TableColumn fx:id="colScore" text="Score (WPMÃ—Acc)" prefWidth="160"/>
            </columns>
        </TableView>
    </center>

</BorderPane>

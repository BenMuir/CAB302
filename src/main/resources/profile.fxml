              </Label>
              <Label fx:id="sessionsLabel" layoutX="485.0" layoutY="350.0" text="sessionsLabel">
                  <font>
                      <Font name="Press Start 2P Regular" size="24.0" />
                  </font>
              </Label>
      </Pane>
    <!-- Rank -->
      <Pane layoutX="50.0" layoutY="100.0" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: rgba(255,255,255,0.4); -fx-background-radius: 20; -fx-padding: 24;">
            <ImageView fx:id="rankBadgeImageView" fitHeight="250.0" fitWidth="250.0" layoutX="25.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" />
      </Pane>
      <Label layoutX="64.0" layoutY="16.0" text="Rank" textFill="#e5b514">
         <font>
            <Font name="Press Start 2P Regular" size="68.0" />

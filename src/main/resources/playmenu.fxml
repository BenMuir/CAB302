<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@styles/buttonStyle.css" xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.typinggame.controller.PlayMenu">
    <!-- Background Image-->
        <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true">
                <Image url="@images/GameModeBackground.png" />
        </ImageView>
    <!-- Game Mode Label-->
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                <Label layoutX="20.0" layoutY="281.0" text="Game Mode" textFill="#e5b514">
                    <font>
                        <Font name="Press Start 2P Regular" size="68.0" />
                    </font>
                </Label>
        </AnchorPane>

       <!--Learn-->
        <StackPane layoutX="217.0" layoutY="437.0" prefHeight="101.0" prefWidth="217.0">
                <Button minHeight="100.0" minWidth="261.0" onAction="#learnModeButtonPressed" prefHeight="100.0" prefWidth="261.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" styleClass="menu-button" text="Learn">
                    <font>
                        <Font name="Press Start 2P Regular" size="30.0" />
                    </font>
                </Button>
        </StackPane>

        <!-- Race -->
        <StackPane layoutX="217.0" layoutY="554.0" prefHeight="101.0" prefWidth="217.0">
                <Button minHeight="100.0" minWidth="261.0" onAction="#raceModeButtonPressed" prefHeight="100.0" prefWidth="261.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" styleClass="menu-button" text="Race">
                    <font>
                        <Font name="Press Start 2P Regular" size="30.0" />
                    </font>
                </Button>
        </StackPane>

        <!-- Add Custom Drill -->
        <StackPane layoutX="217.0" layoutY="670.0" prefHeight="101.0" prefWidth="217.0">
                <Button minHeight="100.0" minWidth="261.0" onAction="#onAddCustomDrill" prefHeight="100.0" prefWidth="261.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" styleClass="menu-button" text="Custom">
                    <font>
                        <Font name="Press Start 2P Regular" size="30.0" />
                    </font>
                </Button>
        </StackPane>

        <!-- Back -->
        <StackPane layoutX="217.0" layoutY="790.0" prefHeight="101.0" prefWidth="217.0">
                <Button minHeight="100.0" minWidth="261.0" onAction="#backButtonPressed" prefHeight="100.0" prefWidth="261.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" styleClass="menu-button" text="Back">
                    <font>
                        <Font name="Press Start 2P Regular" size="30.0" />
                    </font>
                </Button>
        </StackPane>
</AnchorPane>

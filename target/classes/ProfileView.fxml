<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.typinggame.controller.ProfileController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label fx:id="welcomeLabel" layoutX="20.0" layoutY="20.0" text="Welcome," />
        <Label fx:id="highScoreLabel" layoutX="20.0" layoutY="60.0" text="High Score:" />
        <Label fx:id="accuracyLabel" layoutX="20.0" layoutY="100.0" text="Best Accuracy:" />
        <Label fx:id="sessionCountLabel" layoutX="20.0" layoutY="140.0" text="Sessions Played:" />

        <Button layoutX="20.0" layoutY="200.0" text="Start Game" onAction="#handleStartGame"/>
        <Button layoutX="120.0" layoutY="200.0" text="Logout" onAction="#handleLogout"/>
        <Button layoutX="220.0" layoutY="200.0" text="Back" onAction="#handleBack"/>
    </children>
</AnchorPane>